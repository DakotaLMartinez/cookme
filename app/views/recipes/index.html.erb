<h1>All Recipes</h1>


<%= form_tag recipes_path, :method => "get" do %>
  <%= label_tag(:search, "search by category:")%>
  <%= collection_select(:recipe,:category_id, Category.all,:id, :name,  { include_blank: true }) %>
  <%=text_field_tag :search, params[:search] %>
  <%= submit_tag('Search', :name => nil ) %>
  <% end %>

  
  <ul>
  <% @recipes.each do |r|%>
    <li> <%= link_to r.name, recipe_path(r) %>
    <%= link_to "edit", edit_recipe_path(r)%>
    <%= link_to 'Destroy', recipe_path(r),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>